<h1>
    Contacts List
</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">
                <i class="bi bi-hash"></i>
            </th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col"> Email </th>
            <th scope="col">Age</th>
        </tr>
    </thead>
    <tbody>
        <% var n = 0; %> 
        <% users.forEach(user=> { %>
            <% n += 1 %> 
            <tr>
                <th scope="row" > <%= n %> </th>
                <td><%= user.firstname %></td>
                <td><%= user.lastname %></td>
                <td><%= user.email %></td>
                <td><%= user.age %></td>
                <td>
                    <button class="btn btn-danger" onclick="delete_contact('<%= user.id %>')">X</button>
                </td>
                <td>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </button>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>